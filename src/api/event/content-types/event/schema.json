{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Events",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "date": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "locationURL": {
      "type": "string"
    },
    "highlightedEvent": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "coverText": {
      "type": "string",
      "maxLength": 50
    },
    "eventLinks": {
      "type": "component",
      "repeatable": true,
      "component": "link.event-link"
    }
  }
}
